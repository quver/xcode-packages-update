{
  "name": "xcode-packages-update",
  "version": "1.0.0",
  "description": "Resolves Xcode SPM dependencies and reports what changed",
  "main": "main.js",
  "scripts": {
    "build": "esbuild main.js --bundle --platform=node --conditions=import --outfile=dist/main/index.js && esbuild post.js --bundle --platform=node --conditions=import --outfile=dist/post/index.js",
    "test": "jest",
    "lint": "eslint .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.8.1"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml"
  }
}
